@model IEnumerable<IDM.DTO.Report.rpt_xaricolansened_DTO>
<div class="table-responsive">
    <table id="dt_basic" class="table table-bordered table-striped table-condensed table-hover smart-form">
        <thead>
            <tr>
                <th>No</th>
                <th>Göndərilən sənədin çıxış No-si</th>
                <th>Göndərilən sənədin çıxış tarixi</th>
                <th>Sənəd hara və ya kimə göndərilmişdir</th>
                <th>Əlaqəli şəxs</th>
                <th>Göndərilən sənədin qısa məzmunu</th>
                <th>Sənədi kim imzalamışdır</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.docRegNo</td>
                    <td>@item.docRegDate</td>
                    <td></td>
                    <td>@item.DocCreatedBy</td>
                    <td>@Html.Raw(item.docContent)</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $("#dt_basic").DataTable();
</script>
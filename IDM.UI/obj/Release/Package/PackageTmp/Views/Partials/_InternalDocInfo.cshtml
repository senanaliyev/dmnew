<div class="jarviswidget" id="wid-id-2">
    <header>
        <span class="widget-icon"> <i class="glyphicon glyphicon-file"></i> </span>
        <h2></h2>

    </header>
    <div class="widget-body">
        <fieldset>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="company">Nomenklatur</label>
                    @Html.DropDownList("nmcID", new SelectList(ViewBag.Nomenclature, "id", "title"), "Seçin", new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="company">Alt nomenklatur</label>
                    @Html.DropDownList("nmcSubID", new SelectList(ViewBag.Nomenclature, "id", "title"), new { @class = "form-control" })
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="company">Icra növü</label>
                    @Html.DropDownList("actionTypeID", new SelectList(ViewBag.ActionType, "id", "title"), new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label for="company">Cavablandırılacaq sənədin nömrəsi</label>
                    @Html.TextBox("responseDocNo", "", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label for="company">Əlaqə növü</label>
                    @Html.DropDownList("conTypeID", new SelectList(ViewBag.ContactType, "id", "title"), new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="company">Göndəriləcək əməkdaş</label>
                    @Html.DropDownList("empID", (SelectList)ViewBag.Employees, new { @class = "form-control" })
                </div>
            </div>
        </fieldset>
    </div>
</div>

        $('#doNote').summernote({
            placeholder: 'Əlavə qeydlər',
            tabsize: 2,
            height: 100
        });
    });

    $("#btnIcraMuddetiUzat").click(function () {
        var data = $("#operationForm").serialize();
        $.ajax({
            type: "POST",
            url: "/General/IcraMuddetUzatSorgu",
            data: data,
            success: function (response) {
                window.location.href = response;
            }
        });
    });
</script>
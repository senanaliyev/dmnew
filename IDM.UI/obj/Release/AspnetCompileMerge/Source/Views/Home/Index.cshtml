@model IEnumerable<IDM.DTO.Custom_DocGetList_DTO>

@{
    ViewBag.Title = "Ana səhifə";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <article class="col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
            <header>
                <ul class="nav nav-tabs pull-left in">
                    <li class="active" id="homemaintab">
                        <a data-toggle="tab" href="#maintab"> <i class="fa fa-lg fa-home"></i> <span class="hidden-mobile hidden-tablet"> @ViewBag.Title</span> </a>
                    </li>
                </ul>
            </header>
            <div>
                <div class="jarviswidget-editbox">
                </div>
                <div class="widget-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="maintab">
                            <div class="row">

                                <div class="col-sm-4">
                                    <div class="well well-sm">
                                        <!-- Timeline Content -->
                                        <div class="smart-timeline">
                                            <ul class="smart-timeline-list">
                                                @foreach (var item in Model)
                                                {

                                                    <li>
                                                        <div class="smart-timeline-icon">
                                                            <i class="fa fa-file-text"></i>
                                                        </div>
                                                        <div class="smart-timeline-time">
                                                            <small> @item.DocRegDate</small>
                                                        </div>
                                                        <div class="smart-timeline-content">
                                                            <p>
                                                                <strong>@item.DocContentTypeTitle / @item.DocTypeTitle [<a href="javascript:void(0);"><i>@item.DocRegNo</i></a>]</strong>
                                                            </p>
                                                            @if (String.IsNullOrEmpty(item.doNote) == false)
                                                            {
                                                                //--------------------------
                                                                <div class="timeline-seperator text-center">
                                                                    <span>@item.operationTitle</span>
                                                                </div>

                                                                <div class="chat-body no-padding profile-message">
                                                                    <ul>
                                                                        <li class="message">
                                                                            <img src="~/Content/img/avatars/male.png" alt="user">
                                                                            <span class="message-text">
                                                                                <a href="javascript:void(0);" class="username">
                                                                                    @item.fromEmployee
                                                                                    <small class="text-muted pull-right ultra-light"> @item.doDate </small>
                                                                                </a>
                                                                                @item.doNote
                                                                            </span>
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                                //--------------------------
                                                            }
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                        <!-- END Timeline Content -->

                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="well padding-10">
                                        <h5 class="margin-top-0"><i class="fa fa-folder-open-o"></i> Hesabatlar</h5>
                                        <div class="row">
                                            <div class="col-lg-12">

                                                <ul class="list-group no-margin">
                                                    <li class="list-group-item">
                                                        <a href=""> İcra olunmamış sənədlər</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> P.A/M.M/N.K daxil olan sənədlərin icrasına nəzarət</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Struktur üzrə sənədlər</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Vaxtı keçmiş sənədlər</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Tapşırıqların və Göstəriş məktublarının icrasına nəzarət</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Vətəndaş qəbulu üzrə hesabat</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Daxil olan sənədlər (siyahı)</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Daxil olan sənədlərin icrasına nəzarət</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> İcra olunmuş sənədlərin hesabatı</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Sənədlərin dövriyyəsi barədə struktur bölmələri üzrə hesabat</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Şikayətlər</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Şikayətlərin sayı</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <a href=""> Xaric olan sənədlər hesabatı</a>
                                                    </li>
                                                </ul>

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </article>
</div>
